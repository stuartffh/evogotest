# Evolution GO - Configuração de Ambiente
# Copie este arquivo para .env e ajuste conforme necessário

# ========================================
# CONFIGURAÇÕES OBRIGATÓRIAS
# ========================================

# Porta do servidor
SERVER_PORT=4000

# Nome do cliente/instância
CLIENT_NAME=evolution

# Chave de API (OBRIGATÓRIO - Use uma chave forte e única)
GLOBAL_API_KEY=sua-chave-api-segura-aqui-uuid-recomendado

# ========================================
# BANCO DE DADOS
# ========================================

# PostgreSQL (RECOMENDADO para produção)
POSTGRES_AUTH_DB=postgresql://postgres:postgres@postgres:5432/evogo_auth?sslmode=disable
POSTGRES_USERS_DB=postgresql://postgres:postgres@postgres:5432/evogo_users?sslmode=disable

# Salvar mensagens no banco de dados
DATABASE_SAVE_MESSAGES=false

# ========================================
# LOGS E DEBUG
# ========================================

# Nível de debug do WhatsApp (INFO, DEBUG, ERROR)
WADEBUG=INFO

# Tipo de log (console, file)
LOGTYPE=console

# Diretório de logs
LOG_DIRECTORY=/app/logs

# Tamanho máximo do arquivo de log em MB
LOG_MAX_SIZE=100

# Número máximo de arquivos de backup
LOG_MAX_BACKUPS=5

# Dias de retenção dos logs
LOG_MAX_AGE=30

# Comprimir logs antigos
LOG_COMPRESS=true

# ========================================
# CONEXÃO
# ========================================

# Conectar automaticamente ao iniciar
CONNECT_ON_STARTUP=false

# Enviar arquivos via webhook
WEBHOOKFILES=true

# Nome do sistema operacional
OS_NAME=Linux

# ========================================
# EVENTOS E WEBHOOKS
# ========================================

# URL do webhook para receber eventos
WEBHOOK_URL=

# RabbitMQ
AMQP_URL=
AMQP_GLOBAL_ENABLED=false
AMQP_GLOBAL_EVENTS=
AMQP_SPECIFIC_EVENTS=

# NATS
NATS_URL=
NATS_GLOBAL_ENABLED=false
NATS_GLOBAL_EVENTS=

# Ignorar eventos de grupos
EVENT_IGNORE_GROUP=false

# Ignorar eventos de status
EVENT_IGNORE_STATUS=true

# ========================================
# ARMAZENAMENTO DE MÍDIA (MinIO/S3)
# ========================================

MINIO_ENABLED=false
MINIO_ENDPOINT=
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_BUCKET=
MINIO_USE_SSL=false
MINIO_REGION=

# ========================================
# PROXY (Opcional)
# ========================================

PROXY_HOST=
PROXY_PORT=
PROXY_USERNAME=
PROXY_PASSWORD=

# ========================================
# RECURSOS ADICIONAIS
# ========================================

# API de conversão de áudio
API_AUDIO_CONVERTER=
API_AUDIO_CONVERTER_KEY=

# Número máximo de tentativas de QR Code
QRCODE_MAX_COUNT=5

# Verificar se o usuário existe antes de enviar mensagem
CHECK_USER_EXISTS=true

# Versão do WhatsApp (opcional - deixe vazio para usar a padrão)
WHATSAPP_VERSION_MAJOR=
WHATSAPP_VERSION_MINOR=
WHATSAPP_VERSION_PATCH=
